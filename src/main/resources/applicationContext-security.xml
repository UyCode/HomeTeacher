<?xml version="1.0" encoding="UTF-8"?>


<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
	<!--
	Just for develop

    <debug />-->
    <debug />

    <beans:bean id="encoder" class="com.jiajiaohello.support.auth.PasswordEncoder"/>

    <global-method-security pre-post-annotations="enabled" />

    <authentication-manager>
        <authentication-provider user-service-ref="userUserDetailsService">
            <password-encoder ref="encoder" />
        </authentication-provider>
        <authentication-provider user-service-ref="teacherUserDetailsService">
            <password-encoder ref="encoder" />
        </authentication-provider>
        <authentication-provider user-service-ref="managerUserDetailsService">
            <password-encoder ref="encoder" />
        </authentication-provider>
    </authentication-manager>

    <http pattern="/" security="none"/>
    <http pattern="/public/**" security="none"/>
    <http use-expressions="true" auto-config="true" pattern="/dashboard/users/**">
        <intercept-url pattern="/dashboard/**" access="hasRole('ROLE_USER')"/>
        <form-login default-target-url="/"
                    login-page="/auth/user/login"
                    username-parameter="username"
                    password-parameter="password"
                    authentication-failure-url="/public/login.html?error=true"
                />
        <logout logout-success-url="/public/login.html" delete-cookies="JSESSIONID"/>
        <remember-me key="jiajiaohello_user" user-service-ref="userUserDetailsService" />
    </http>

    <http use-expressions="true" auto-config="true" pattern="/dashboard/teachers/**">
        <intercept-url pattern="/dashboard/**" access="hasRole('ROLE_TEACHER')"/>
        <form-login default-target-url="/"
                    login-page="/auth/teacher/login"
                    username-parameter="username"
                    password-parameter="password"
                    authentication-failure-url="/public/login.html?error=true"
                />
        <logout logout-success-url="/public/login.html" delete-cookies="JSESSIONID"/>
        <remember-me key="jiajiaohello_teacher" user-service-ref="teacherUserDetailsService" />
    </http>

    <http use-expressions="true" auto-config="true" pattern="/dashboard/admin/**">
        <intercept-url pattern="/dashboard/**" access="hasRole('ROLE_ADMIN')"/>
        <form-login default-target-url="/"
                    login-page="/auth/admin/login"
                    username-parameter="username"
                    password-parameter="password"
                    authentication-failure-url="/public/login.html?error=true"
                />
        <logout logout-success-url="/auth/admin/login" delete-cookies="JSESSIONID"/>
        <remember-me key="jiajiaohello_manager" user-service-ref="managerUserDetailsService" />
    </http>
</beans:beans>
